{
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "module": "ES2022",
    "moduleResolution": "Bundler", // introduced in TypeScript 5.0
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "ES2022",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
    "lambda.ts"
  ],
}